# Scribe Rabbit API - Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# Security
API_KEY_HEADER=X-API-Key
ALLOWED_API_KEYS=["your-api-key-here"]
WEBHOOK_SECRET=your-webhook-secret-here

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/scribe_rabbit

# Redis (for Celery task queue)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AWS Settings (if deploying on AWS)
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name
# AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/your-queue

# GCP Settings (if deploying on GCP)
# GCP_PROJECT_ID=your-project-id
# GCP_STORAGE_BUCKET=your-bucket-name
# GCP_PUBSUB_TOPIC=your-topic-name

# Transcription Settings
MAX_FILE_SIZE_MB=500
DEFAULT_MODEL=ivrit-ai/whisper-large-v3-turbo-ct2
DEFAULT_ENGINE=faster-whisper

# Job Settings
JOB_TIMEOUT_SECONDS=3600
MAX_RETRY_ATTEMPTS=3

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Enhanced AI Settings (Placeholder)
# ENHANCED_AI_ENDPOINT=https://your-enhanced-ai-service.com
# ENHANCED_AI_API_KEY=your-enhanced-ai-key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# CORS Settings
CORS_ORIGINS=["*"]

# Webhook Settings (for Vercel deployments)
# VERCEL_AUTOMATION_BYPASS_SECRET=your-vercel-bypass-secret
